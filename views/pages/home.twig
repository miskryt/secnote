{% extends "base.twig" %}

{% block title %}Index{% endblock %}

{% block head %}
{{ parent() }}

{% endblock %}

{% block content %}
    <div class="container container-lg">
        <main>
            {%  if result|length > 0 %}
                <div class="col-md-5">
                    <div class="url">
                        {{ result }}
                    </div>

                </div>
            {% else %}
                <form method="post" class="row g-3 needs-validation" novalidate="">

                    <div class="col-md-5">
                        <label for="text" class="form-label">New note</label>
                        <textarea name="text" class="form-control" id="text" required="" rows="10" placeholder="{{"Write a note"|trim}}"></textarea>
                        <div class="invalid-feedback">
                            Please enter text.
                        </div>
                    </div>

                    <div class="col-md-5">
                        <button class="btn btn-primary" type="submit">Submit form</button>
                    </div>
                </form>
            {% endif %}
        </main>
    </div>


{% endblock %}